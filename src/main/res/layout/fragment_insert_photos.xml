<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_fiphoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/sv_photos"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:id="@+id/ll_insert_ingredients"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <RelativeLayout
                    android:id="@+id/ll_top_colunas"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/photo"
                        android:textSize="18sp"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/teal"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_leg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/leg"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:textSize="18sp"
                        android:textColor="@color/teal"
                        android:textStyle="bold"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/itens_photos"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_photo1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:background="@color/teal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/img_photo1"
                            android:layout_width="140dp"
                            android:layout_height="180dp"
                            android:clickable="true"
                            android:layout_alignParentLeft="true"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/myImageViewText1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/img_photo1"
                            android:layout_alignTop="@+id/img_photo1"
                            android:layout_alignRight="@+id/img_photo1"
                            android:layout_alignBottom="@+id/img_photo1"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/hint_click"
                            android:textColor="@color/gray" />

                        <EditText
                            android:id="@+id/et_details1"
                            android:layout_width="120dp"
                            android:layout_height="180dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:hint="@string/hint_leg"
                            android:textSize="15sp"
                            android:layout_alignParentRight="true"
                            android:background="@color/white"
                            android:layout_marginLeft="5dp"
                            android:inputType="textMultiLine"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_photo2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:background="@color/teal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/img_photo2"
                            android:layout_width="140dp"
                            android:layout_height="180dp"
                            android:clickable="true"
                            android:layout_alignParentLeft="true"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/myImageViewText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_alignLeft="@+id/img_photo2"
                            android:layout_alignTop="@+id/img_photo2"
                            android:layout_alignRight="@+id/img_photo2"
                            android:layout_alignBottom="@+id/img_photo2"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:text="@string/hint_click"
                            android:textColor="@color/gray" />

                        <EditText
                            android:id="@+id/et_details2"
                            android:layout_width="120dp"
                            android:layout_height="180dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:hint="@string/hint_leg"
                            android:textSize="15sp"
                            android:layout_alignParentRight="true"
                            android:background="@color/white"
                            android:layout_marginLeft="5dp"
                            android:inputType="textMultiLine"/>
                    </RelativeLayout>

                </LinearLayout>

                    <Button
                        android:id="@+id/btn_finalizar"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:text="@string/fim"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:background="@color/teal"
                        android:layout_gravity="center"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
